---
interface Props {
  pubDate: Date;
  updatedDate?: Date;
  author?: string;
}

const { pubDate, updatedDate, author = 'The Bitcoin Breakdown' } = Astro.props;

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<div class="post-meta">
  <span class="author">{author}</span>
  <span class="separator">·</span>
  <time datetime={pubDate.toISOString()}>
    {formatDate(pubDate)}
  </time>
  {updatedDate && (
    <>
      <span class="separator">·</span>
      <span class="updated">
        Updated <time datetime={updatedDate.toISOString()}>{formatDate(updatedDate)}</time>
      </span>
    </>
  )}
</div>

<style>
  .post-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .separator {
    color: var(--color-border);
  }

  .updated {
    font-style: italic;
  }
</style>
