---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Block Not Found" description="The page you're looking for doesn't exist or has been moved.">
  <section class="page-404">
    <div class="error-code" aria-hidden="true">404</div>
    <h1 class="error-title">Block Not Found</h1>
    <p class="error-desc">
      The page you're looking for doesn't exist, has been moved, or is still being mined.
    </p>
    <div class="error-actions">
      <a href="/" class="btn btn--primary btn--small tbb-link">Return Home</a>
    </div>
  </section>
</BaseLayout>

<style>
  .page-404 {
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-7) var(--page-margin);
    position: relative;
  }

  .page-404::before {
    content: '';
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(255, 215, 0, 0.04), transparent 70%);
    pointer-events: none;
  }

  .error-code {
    font-size: clamp(80px, 15vw, 160px);
    font-weight: 300;
    color: var(--gold);
    opacity: 0.15;
    line-height: 1;
    letter-spacing: 8px;
    position: relative;
  }

  .error-title {
    font-size: clamp(24px, 4vw, 40px);
    font-weight: 300;
    color: var(--text-primary);
    margin-top: calc(-1 * var(--space-4));
    letter-spacing: 1px;
    position: relative;
  }

  .error-desc {
    font-size: 16px;
    font-weight: 300;
    color: var(--text-muted);
    margin-top: var(--space-3);
    max-width: 420px;
    line-height: 1.7;
    position: relative;
  }

  .error-actions {
    margin-top: var(--space-6);
    position: relative;
  }
</style>
