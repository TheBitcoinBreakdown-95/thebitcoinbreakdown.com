---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Divider from '../../components/Divider.astro';
---

<BaseLayout title="Guides" description="Step-by-step Bitcoin guides for beginners and advanced users.">
  <section class="section-page section">
    <div class="container">
      <header class="page-header reveal">
        <h1>Guides</h1>
      </header>

      <div class="prose reveal">
        <p>
          Step-by-step guides to help you navigate the Bitcoin ecosystem. From setting up your first wallet to running your own node.
        </p>

        <Divider />

        <div class="empty-state">
          <div class="empty-icon">&#8383;</div>
          <h3 class="empty-title">Coming soon</h3>
          <p class="empty-desc">Guides are being written. Check back soon.</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: var(--space-6);
  }
</style>
