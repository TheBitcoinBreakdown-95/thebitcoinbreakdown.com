---
import BaseLayout from './BaseLayout.astro';
import PostMeta from '../components/PostMeta.astro';
import Divider from '../components/Divider.astro';
import SeriesNav from '../components/SeriesNav.astro';
import SeriesProgress from '../components/SeriesProgress.astro';

interface HeadingItem {
  depth: number;
  slug: string;
  text: string;
}

interface SeriesPost {
  id: string;
  data: {
    title: string;
    order?: number;
    category?: string;
  };
}

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  author?: string;
  tags?: string[];
  image?: string;
  imageAlt?: string;
  category?: string;
  readingTime?: string;
  headings?: HeadingItem[];
  seriesPosts?: SeriesPost[];
  currentPostId?: string;
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  author,
  tags = [],
  image,
  imageAlt,
  category,
  readingTime,
  headings = [],
  seriesPosts = [],
  currentPostId = '',
} = Astro.props;

// Generate a decorative hash string from the title
const hashStr = Array.from(title)
  .reduce((acc, char) => ((acc << 5) - acc + char.charCodeAt(0)) | 0, 0)
  .toString(16)
  .replace('-', '')
  .padStart(16, 'a3f7')
  .slice(0, 16);

// TOC: only show for posts with 3+ headings
const tocHeadings = headings.filter((h) => h.depth === 2 || h.depth === 3);
const showToc = tocHeadings.length >= 3;

// Series progress
const hasSeries = seriesPosts.length > 1;
const currentIndex = hasSeries ? seriesPosts.findIndex((p) => p.id === currentPostId) : -1;

// Human-readable category label
const categoryLabels: Record<string, string> = {
  'what-is-bitcoin': 'What is Bitcoin?',
  'why-bitcoin': 'Why Bitcoin?',
  'memes': 'Memes',
  'speeches': 'Speeches',
  'guides': 'Guides',
  'learn-more': 'Learn More',
};
const categoryLabel = category ? (categoryLabels[category] || category) : '';
---

<BaseLayout title={title} description={description} image={image}>
  <article class="blog-post">
    <header class="post-header container">
      <div class="hash-decoration reveal" aria-hidden="true">0x{hashStr}...{hashStr.split('').reverse().join('')}</div>
      <h1 class="reveal">{title}</h1>
      <div class="reveal">
        <PostMeta pubDate={pubDate} updatedDate={updatedDate} readingTime={readingTime} category={categoryLabel} />
      </div>
      {tags.length > 0 && (
        <div class="tag-group reveal">
          {tags.map((tag) => (
            <a href={`/tags/${tag}`} class="tag">{tag}</a>
          ))}
        </div>
      )}
      {hasSeries && currentIndex >= 0 && (
        <SeriesProgress categoryLabel={categoryLabel} currentIndex={currentIndex} totalPosts={seriesPosts.length} />
      )}
    </header>

    {image && (
      <div class="featured-image container reveal">
        <div class="photo-treatment">
          <img src={image} alt={imageAlt || title} />
        </div>
      </div>
    )}

    <div class="post-content prose container">
      {showToc && (
        <nav class="toc reveal" aria-label="Table of contents">
          <div class="toc-title">Contents</div>
          <ol class="toc-list">
            {tocHeadings.map((heading) => (
              <li class={heading.depth === 3 ? 'toc-sub' : ''}>
                <a href={`#${heading.slug}`}>{heading.text}</a>
              </li>
            ))}
          </ol>
        </nav>
      )}
      <slot />
    </div>

    <footer class="post-footer container">
      {hasSeries && (
        <SeriesNav seriesPosts={seriesPosts} currentPostId={currentPostId} />
      )}
      <Divider />
      <div class="hash-decoration reveal" aria-hidden="true">EOF::{hashStr}</div>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding: var(--space-8) 0 var(--space-9);
  }

  .post-header {
    margin-bottom: var(--space-6);
  }

  .post-header h1 {
    font-size: clamp(28px, 5vw, 52px);
    font-weight: 300;
    letter-spacing: 1px;
    line-height: 1.15;
    margin-bottom: var(--space-4);
    color: var(--text-primary);
  }

  .post-header .hash-decoration {
    margin-bottom: var(--space-4);
  }

  .tag-group {
    margin-top: var(--space-3);
  }

  .featured-image {
    margin-bottom: var(--space-6);
  }

  .post-content {
    margin-bottom: var(--space-7);
  }

  .post-footer {
    padding-top: var(--space-6);
  }

  .post-footer .hash-decoration {
    margin-top: var(--space-5);
    text-align: center;
  }
</style>
