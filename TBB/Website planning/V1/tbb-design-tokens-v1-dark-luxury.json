{
  "meta": {
    "name": "The Bitcoin Breakdown — Design System v1",
    "codename": "Dark Luxury",
    "aesthetic": "Minimalist Art Deco · Cypherpunk · Greco-Futurism undertones",
    "description": "Pure black base with bright gold accents. Elegant serif typography throughout. Subtle gold glow effects on interaction. Circuit-network background patterns at near-invisible opacity. Minimal ornamentation — luxury through restraint.",
    "created": "2026-02-06",
    "version": "1.0.0"
  },

  "color": {
    "primitive": {
      "black": "#000000",
      "black-soft": "#060606",
      "black-card": "#0A0A0A",
      "black-elevated": "#111111",
      "gold": "#FFD700",
      "gold-muted": "#C9A84C",
      "cream": "#E8E4DC",
      "muted": "#8A857D",
      "dim": "#5A5650"
    },
    "semantic": {
      "background": "#000000",
      "surface": "#0A0A0A",
      "surface-elevated": "#111111",
      "accent": "#FFD700",
      "accent-muted": "#C9A84C",
      "text-primary": "#E8E4DC",
      "text-secondary": "#8A857D",
      "text-muted": "#5A5650",
      "border-default": "rgba(255, 215, 0, 0.06)",
      "border-hover": "rgba(255, 215, 0, 0.15)",
      "border-divider": "rgba(255, 215, 0, 0.08)",
      "glow": "rgba(255, 215, 0, 0.4)",
      "glow-subtle": "rgba(255, 215, 0, 0.06)",
      "glow-dim": "rgba(255, 215, 0, 0.15)",
      "gold-overlay": "rgba(255, 215, 0, 0.04)"
    },
    "gradient": {
      "gold-divider": "linear-gradient(90deg, transparent 0%, rgba(255, 215, 0, 0.2) 50%, transparent 100%)",
      "gold-underline": "linear-gradient(90deg, transparent, #FFD700, transparent)",
      "ambient-glow": "radial-gradient(ellipse at 50% 0%, rgba(255, 215, 0, 0.04) 0%, transparent 70%)",
      "hero-glow": "radial-gradient(circle, rgba(255, 215, 0, 0.06) 0%, transparent 70%)"
    }
  },

  "typography": {
    "font-family": {
      "primary": "'Cormorant Garamond', Georgia, serif",
      "google-import": "https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400&display=swap"
    },
    "scale": {
      "display": {
        "size": "clamp(36px, 6vw, 64px)",
        "weight": 300,
        "letter-spacing": "1px",
        "line-height": 1.1
      },
      "h1": {
        "size": "clamp(28px, 5vw, 52px)",
        "weight": 300,
        "letter-spacing": "1px",
        "line-height": 1.15
      },
      "h2": {
        "size": "clamp(24px, 4vw, 40px)",
        "weight": 400,
        "letter-spacing": "1px",
        "line-height": 1.2
      },
      "h3": {
        "size": "clamp(18px, 2.5vw, 28px)",
        "weight": 500,
        "letter-spacing": "0.5px",
        "line-height": 1.3
      },
      "body": {
        "size": "17px",
        "weight": 300,
        "letter-spacing": "0",
        "line-height": 1.75
      },
      "caption": {
        "size": "12px",
        "weight": 400,
        "letter-spacing": "4px",
        "line-height": 1.4,
        "text-transform": "uppercase"
      },
      "overline": {
        "size": "11px",
        "weight": 400,
        "letter-spacing": "6px",
        "line-height": 1.4,
        "text-transform": "uppercase"
      },
      "nav": {
        "size": "12px",
        "weight": 400,
        "letter-spacing": "3px",
        "text-transform": "uppercase"
      },
      "section-label": {
        "size": "10px",
        "weight": 400,
        "letter-spacing": "5px",
        "text-transform": "uppercase"
      },
      "tag": {
        "size": "10px",
        "weight": 400,
        "letter-spacing": "3px",
        "text-transform": "uppercase"
      }
    }
  },

  "effects": {
    "glow": {
      "text-gold": "0 0 40px rgba(255, 215, 0, 0.4), 0 0 80px rgba(255, 215, 0, 0.15)",
      "text-gold-subtle": "0 0 30px rgba(255, 215, 0, 0.2)",
      "text-hover": "0 0 20px rgba(255, 215, 0, 0.4)",
      "box-cta": "0 0 30px rgba(255, 215, 0, 0.3), 0 0 60px rgba(255, 215, 0, 0.1)",
      "box-card-hover": "0 0 40px rgba(255, 215, 0, 0.06), 0 20px 60px rgba(0, 0, 0, 0.4)",
      "box-card-elevated": "0 16px 48px rgba(0, 0, 0, 0.4)"
    },
    "shadow": {
      "card-hover": "0 12px 40px rgba(0, 0, 0, 0.6)",
      "frame": "0 40px 80px rgba(0, 0, 0, 0.5)"
    }
  },

  "motion": {
    "easing": {
      "default": "cubic-bezier(0.23, 1, 0.32, 1)",
      "ease": "ease"
    },
    "duration": {
      "fast": "0.3s",
      "medium": "0.4s",
      "slow": "0.5s",
      "entrance": "0.8s"
    },
    "hover": {
      "card-lift": "translateY(-3px)",
      "swatch-lift": "translateY(-4px)",
      "cta-lift": "translateY(-1px)",
      "subtle-lift": "translateY(-2px)"
    },
    "entrance": {
      "type": "fadeInUp",
      "from": { "opacity": 0, "translateY": "20px" },
      "to": { "opacity": 1, "translateY": "0" },
      "stagger-delay": "0.1s"
    }
  },

  "borders": {
    "radius": {
      "none": "0",
      "subtle": "2px",
      "small": "4px"
    },
    "style": "minimal — near-zero border-radius. Luxury through sharp edges."
  },

  "decorative": {
    "background-pattern": {
      "type": "circuit-network",
      "opacity": 0.04,
      "color": "#FFD700",
      "stroke-width": "0.3–0.5px",
      "note": "SVG pattern of circuit lines, nodes, and connection points. Extremely subtle — felt, not seen."
    },
    "dividers": {
      "type": "gold-gradient-line",
      "implementation": "linear-gradient(90deg, transparent 0%, rgba(255, 215, 0, 0.2) 50%, transparent 100%)",
      "height": "1px"
    },
    "card-underline-reveal": {
      "type": "gold-gradient-line at card bottom on hover",
      "opacity-default": 0,
      "opacity-hover": 0.3
    },
    "ambient-glow": {
      "type": "radial-gradient bloom at top of card on hover",
      "implementation": "radial-gradient(ellipse at 50% 0%, rgba(255, 215, 0, 0.04) 0%, transparent 70%)"
    }
  },

  "layout": {
    "max-width": "1100px",
    "page-padding": "24px",
    "section-padding": "60px 24px",
    "card-padding": "32px 28px",
    "card-gap": "20px"
  },

  "components": {
    "button-primary": {
      "background": "#FFD700",
      "color": "#000000",
      "font-size": "12px",
      "letter-spacing": "4px",
      "text-transform": "uppercase",
      "font-weight": 500,
      "padding": "14px 40px",
      "border": "none",
      "hover-glow": "0 0 30px rgba(255, 215, 0, 0.3), 0 0 60px rgba(255, 215, 0, 0.1)",
      "hover-lift": "translateY(-1px)"
    },
    "button-ghost": {
      "background": "transparent",
      "color": "#FFD700",
      "border": "1px solid rgba(255, 215, 0, 0.3)",
      "hover-border": "#FFD700",
      "hover-background": "rgba(255, 215, 0, 0.05)",
      "hover-glow": "0 0 20px rgba(255, 215, 0, 0.1)"
    },
    "card": {
      "background": "#0A0A0A",
      "border": "1px solid rgba(255, 215, 0, 0.04)",
      "border-hover": "rgba(255, 215, 0, 0.1)",
      "hover-lift": "translateY(-3px)",
      "hover-shadow": "0 16px 48px rgba(0, 0, 0, 0.4)",
      "hover-ambient-glow": true,
      "hover-gold-underline-reveal": true
    },
    "nav-link": {
      "color-default": "#8A857D",
      "color-hover": "#FFD700",
      "hover-text-shadow": "0 0 20px rgba(255, 215, 0, 0.4)"
    },
    "article-card": {
      "tag-color": "#C9A84C",
      "title-color-default": "#E8E4DC",
      "title-color-hover": "#FFD700",
      "excerpt-color": "#5A5650"
    }
  },

  "css_variables": {
    "note": "Copy-paste ready CSS custom properties for implementation",
    "code": ":root {\n  --black: #000000;\n  --black-soft: #060606;\n  --black-card: #0A0A0A;\n  --black-elevated: #111111;\n  --gold: #FFD700;\n  --gold-muted: #C9A84C;\n  --gold-dim: rgba(255, 215, 0, 0.15);\n  --gold-glow: rgba(255, 215, 0, 0.4);\n  --gold-subtle: rgba(255, 215, 0, 0.06);\n  --text-primary: #E8E4DC;\n  --text-secondary: #8A857D;\n  --text-muted: #5A5650;\n  --font-display: 'Cormorant Garamond', Georgia, serif;\n  --border-default: rgba(255, 215, 0, 0.06);\n  --border-hover: rgba(255, 215, 0, 0.15);\n  --ease-luxury: cubic-bezier(0.23, 1, 0.32, 1);\n}"
  }
}
